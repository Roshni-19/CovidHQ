<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Covid HQ"
                        android:fontFamily="@font/advent_pro_semibold"
                        android:layout_weight="2"
                        android:textSize="25dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lets Break the Chain Together"
                        android:fontFamily="@font/advent_pro"
                        android:layout_weight="2"
                        android:textSize="15dp"/>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/buttonLogout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/button_drawable"
                        android:fontFamily="@font/advent_pro"
                        android:text="Logout"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />

                </LinearLayout>





            </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_weight="2">


                    <TextView
                        android:id="@+id/welcome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="start"
                        android:text="Welcome to Covid HQ!"
                        android:textAlignment="textStart"
                        android:fontFamily="@font/advent_pro_semibold"
                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:gravity="start"
                        android:fontFamily="@font/advent_pro"
                        android:textAlignment="textStart"
                        android:text="An One-Stop App for everything you need about Home Quarantine for COVID-19"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/doctor"/>


                </LinearLayout>

            </LinearLayout>


            <Button
                android:id="@+id/symptoms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:background="@drawable/button_drawable"
                android:fontFamily="@font/advent_pro"
                android:gravity="center"
                android:text="Check Symptoms"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <Button
                android:id="@+id/gen_guidelines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:gravity="center"
                android:text="Guidelines"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:fontFamily="@font/advent_pro"
                android:background="@drawable/button_drawable" />

            <Button
                android:id="@+id/medications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:gravity="center"
                android:text="Medications &amp; Treatments"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:fontFamily="@font/advent_pro"
                android:background="@drawable/button_drawable"/>

            <Button
                android:id="@+id/oxygen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:gravity="center"
                android:text="Available Bed and Oxygen"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:fontFamily="@font/advent_pro"
                android:background="@drawable/button_drawable" />

            <Button
                android:id="@+id/food"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:gravity="center"
                android:text="Diet Plan"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:fontFamily="@font/advent_pro"
                android:background="@drawable/button_drawable" />


            <Button
                android:id="@+id/doctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:gravity="center"
                android:text="Doctor"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:fontFamily="@font/advent_pro"
                android:background="@drawable/button_drawable" />

            <Button
                android:id="@+id/livetv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:gravity="center"
                android:text="Live TV"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:fontFamily="@font/advent_pro"
                android:background="@drawable/button_drawable" />





        </LinearLayout>


    </ScrollView>



</LinearLayout>


