<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Symptoms">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="How are you feeling today?"
                android:fontFamily="@font/advent_pro"
                android:textSize="@dimen/toolbar_titleText_size" />

            <CheckBox
                android:id="@+id/normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Normal"
                android:fontFamily="@font/advent_pro"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/runningnose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Running Nose/ Sore Throat"
                android:fontFamily="@font/advent_pro"
                android:textSize="20dp" />

            <CheckBox
                android:id="@+id/body_ache"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Body Ache"
                android:fontFamily="@font/advent_pro"
                android:textSize="20dp" />

            <CheckBox
                android:id="@+id/mild_fever"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Feverish"
                android:fontFamily="@font/advent_pro"
                android:textSize="20dp" />

            <CheckBox
                android:id="@+id/losstaste"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Loss of Taste or Smell"
                android:fontFamily="@font/advent_pro"
                android:textSize="20dp" />

            <CheckBox
                android:id="@+id/vomit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Nausea/Vomiting"
                android:fontFamily="@font/advent_pro"
                android:textSize="20dp" />

            <CheckBox
                android:id="@+id/breath_difficulty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Breathing difficulty"
                android:fontFamily="@font/advent_pro"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/temperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:hint="Enter Temperature in Fahrenheit"
                android:inputType="numberDecimal"
                android:fontFamily="@font/advent_pro" />

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="Submit"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:background="@drawable/button_drawable" />

            <TextView
                android:id="@+id/normal_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Good! You are in Normal Stage and are not affected by COVID-19. Continue Staying
at home. Stay Safe and folow the guidelines."
                android:fontFamily="@font/advent_pro"                android:textSize="20dp" />

            <TextView
                android:id="@+id/mild_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/advent_pro"
                android:text="Alert! You have mild symptoms of COVID-19. You mist continue your home-quarantine.
Stay Home. Stay Safe. Follow the home quarantine guidelines."
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/alert_text"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/advent_pro"                android:text="Alert! You are having high symptoms of COVID-19. You must consult a Doctor Immediately."
                android:textSize="20dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/prescription"
                android:fontFamily="@font/advent_pro"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="20dp"/>


        </LinearLayout>

    </ScrollView>



</LinearLayout>
